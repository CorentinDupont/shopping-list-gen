<section class="hero is-fullheight">
  <div class="hero-body">
    <div class="container has-text-centered">
      <div class="column">
        <h3 class="title has-text-black">Register</h3>
        <hr class="login-hr">
        <p class="subtitle has-text-black">Please register to proceed.</p>
        <div class="box login-box">
          <figure class="avatar">
            <img src="https://cdn.pixabay.com/photo/2017/06/14/18/06/river-2402906_960_720.jpg" alt='' role="none">
          </figure>
          <form>
            <div class="field">
              <div class="control">
                <Input type="text" id="username" @value={{this.model.username}} required="true" class="input"
                  placeholder="New Login" />
              </div>
            </div>
            <div class="field">
              <div class="control">
                <Input id="password" @type="password" @value={{this.model.password}} required="true" class="input"
                  placeholder="New Password" />
              </div>
            </div>
            <div class="field">
              <LinkTo @route="login">Vous avez déjà un compte ?</LinkTo>
            </div>
            <Input {{on "click" this.create}} @type="button" @value="Create" @class="button is-block is-primary is-large is-fullwidth" />
          </form>
        </div>
      </div>
    </div>
  </div>
</section>